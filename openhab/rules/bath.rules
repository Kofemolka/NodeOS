var Number havingFan = 0

rule "BathAutoFan"
when   
    Time cron "0/10 * * * * ?"   // every minute
then   
    if(havingFan == 0)
    {
	if(Bath_hum.state > 70) 
	{
	    sendCommand(Bath_fan, ON)
	    havingFan = 1
	}                    
    }
    else
    {
	if(Bath_hum.state < 40) 
	{
	    sendCommand(Bath_fan, OFF)
	    havingFan = 0
	}
    }
end
